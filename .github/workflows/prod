name: CI/CD Pipeline

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: "20.x" # Specify the Node.js version

      - name: Install dependencies (ClassAttendanceTracker)
        run: |
          cd ClassAttendanceTracker
          npm install

      - name: Build (ClassAttendanceTracker)
        run: |
          cd ClassAttendanceTracker
          npm run build
          # Other build steps if necessary

  deploy:
    needs: build
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'

    steps:
      - uses: actions/checkout@v2

      - name: Deploy to Server
        uses: easingthemes/ssh-deploy@v2.1.5
        env:
          SSH_PRIVATE_KEY: SHA256:SWtM0lYGy8QoSssMcqLe6PA57+lLnuNgNEy3KV4OJBw # Use the secret key stored in GitHub secrets
          SOURCE: "ClassAttendanceTracker/dist/" # Adjust this path to where your build outputs are located
          REMOTE_HOST: 74.234.3.129 # The IP address or hostname of your server
          REMOTE_USER: johannes # The username on the server
          TARGET: "/var/www/html/" # The document root of your Apache server
          ARGS: "cd Main/Server && pm2 start index.js --name tea" # Replace /path/to/Server with the actual path

      - name: Notify of Deployment
        run: |
          echo "Deployment complete"
